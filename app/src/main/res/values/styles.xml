<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="signInTheme" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">#ffffff</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColorHighlight">#ffffff</item>
        <item name="colorAccent">#ffffff</item>
        <item name="colorControlNormal">#dcdcdc</item>
        <item name="colorControlActivated">#ffffff</item>
        <item name="android:textColorPrimary">#ffffff</item>
        <item name="android:textColorSecondary">#ffffff</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="searchIcon">@android:drawable/ic_menu_search</item>
        <item name="queryBackground">@android:color/white</item>
        <item name="searchHintIcon">@null</item>
        <item name="queryHint">@string/assortment_search_hint</item>
    </style>

    <style name="ThemeOverlay.OrderApp.ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:paddingStart">@dimen/toolbar_title_padding</item>
    </style>

    //advanced recycler
    <style name="myRecyclerViewStyle">
        <!-- NOTE: clipChildren should be false on API level 11 or later -->
        <item name="android:clipChildren">false</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="commonListItemStyle">
    </style>

</resources>
